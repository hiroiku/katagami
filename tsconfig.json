{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "ESNext.Disposable"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"rootDir": "src",
		"isolatedModules": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
